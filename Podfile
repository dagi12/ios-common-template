  # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!
  pod 'Bolts'
  pod 'SwiftLint'
  pod 'Kingfisher'
  pod 'DateToolsSwift'
  
  #Swinject
  pod 'Swinject'
  pod 'SwinjectStoryboard'
  
  # Network
  pod 'Alamofire'
  pod 'ObjectMapper'
  pod 'AlamofireObjectMapper'
  pod 'SwiftyJSON'
  
  # Rx
  pod 'RxSwift'
  pod 'RxCocoa'
  pod 'RxOptional'
  pod 'RxAlamofire'
  
  # Crashlytics
  pod 'Fabric'
  pod 'Crashlytics'
  
  # Pods for fitbook-ios

  target 'ios-common-templateTests' do
    inherit! :search_paths
    # Pods for testing
  end

  target 'ios-common-templateUITests' do
    inherit! :search_paths
    # Pods for testing
  end

end
